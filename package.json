{
    "name": "backend-tp",
    "version": "1.0.0",
    "type": "module",
    "description": "",
    "main": "app.js",
    "scripts": {
        "build": "tsc -p ./tsconfig.json",
        "start:dev": "tsc-watch --noClear -p ./tsconfig.json --onSuccess \"node ./dist/src/app.js\"",
        "start": "node ./dist/src/app.js",
        "migration:create": "mikro-orm migration:create",
        "migration:up": "mikro-orm migration:up",
        "migration:down": "mikro-orm migration:down",
        "migration:latest": "mikro-orm migration:up --until 0",
        "migration:run": "node dist/shared/db/migration-runner.js",
        "migrate:prod": "tsc && node dist/shared/db/migration-runner.js"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@mikro-orm/cli": "^6.6.4",
        "@types/bcryptjs": "^2.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "4.17.21",
        "@types/node": "20.12.12",
        "@types/nodemailer": "^7.0.5",
        "bcrypt": "^5.1.1",
        "ts-node": "^10.9.2",
        "tsc-watch": "6.0.4",
        "tsx": "^4.7.0",
        "typescript": "5.1.3"
    },
    "dependencies": {
        "@mikro-orm/core": "6.6.5",
        "@mikro-orm/cli": "6.6.5",
        "@mikro-orm/migrations": "6.6.5",
        "@mikro-orm/mysql": "6.6.5",
        "@mikro-orm/sql-highlighter": "1.0.1",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3",
        "cors": "2.8.5",
        "dotenv": "^16.4.5",
        "express": ">=4.20.0",
        "express-validator": "^7.2.0",
        "jsonwebtoken": "^9.0.2",
        "mikro-orm": "^6.3.0",
        "nodemailer": "^7.0.12",
        "reflect-metadata": "0.2.2"
    },
    "mikro-orm": {
        "useTsNode": true,
        "configPaths": [
            "./mikro-orm.config.ts"
        ]
    }
}
